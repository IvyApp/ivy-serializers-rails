{
  "comment": {
    "type": "object",
    "required": ["id", "type"],
    "properties": {
      "id": { "$ref": "#/id" },
      "relationships": {
        "type": "object",
        "required": ["post"],
        "properties": {
          "post": {
            "type": "object",
            "required": ["data"],
            "properties": {
              "linkage": { "$ref": "#/linkage" }
            }
          }
        }
      },
      "type": { "$ref": "#/type" }
    }
  },

  "comments": {
    "type": "array",
    "items": { "$ref": "#/comment" }
  },

  "id": { "type": "string" },

  "ids": {
    "type": "array",
    "items": { "$ref": "#/id" }
  },

  "linkage": {
    "type": "object",
    "required": ["id", "type"],
    "properties": {
      "id": { "$ref": "#/id" },
      "type": { "$ref": "#/type" }
    }
  },

  "linkages": {
    "type": "array",
    "items": { "$ref": "#/linkage" }
  },

  "post": {
    "type": "object",
    "required": ["id", "type"],
    "properties": {
      "id": { "$ref": "#/id" },
      "relationships": {
        "type": "object",
        "required": ["comments"],
        "properties": {
          "comments": {
            "type": "object",
            "required": ["data"],
            "properties": {
              "data": { "$ref": "#/linkages" }
            }
          }
        }
      },
      "type": { "$ref": "#/type" }
    }
  },

  "posts": {
    "type": "array",
    "items": { "$ref": "#/post" }
  },

  "type": {
    "enum": ["comment", "post"]
  }
}
